<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>They call me dashy on the street</h1>
    <table border="1">
        <thead>
            <tr>
                <th>S/N</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Action</th> 
            </tr>
        </thead>
        <% for( let index = 0; index < userDetails.length; index++ ) { %>
            <tbody>
                <tr>
                    <td><%= index +1 %></td>
                    <td><%= userDetails[index].firstname %></td>
                    <td><%= userDetails[index].lastname %></td>
                    <td><%= userDetails[index].email %></td>
                    <td>
                        <form action="/delete" method="post">
                            <input type="hidden" value=<%= userDetails[index].email %> name="newEmail">
                            <button>Delete</button>
                        </form>
                        <form action="/edit" method="post">
                            <input type="hidden" value=<%= userDetails[index].email %> name="newEmail">
                            <button>Edit</button>
                        </form>
                    </td>
                </tr>
            </tbody>
        <% } %>
    </table>
    <a href="/">Signup</a>
</body>
</html>